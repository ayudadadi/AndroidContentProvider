<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yls.demob.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="向学生表插入数据"
        android:id="@+id/btn_insert_stu"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="从学生表查询数据"
        android:id="@+id/btn_query_stu"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="从学生表删除数据"
        android:id="@+id/del_stu"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更新学生表数据"
        android:id="@+id/upd_stu"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="向分数表插入数据"
        android:id="@+id/btn_insert_sco"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="从分数表查询数据"
        android:id="@+id/btn_query_sco"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="结果"
        android:id="@+id/txt_result"/>

</LinearLayout>
